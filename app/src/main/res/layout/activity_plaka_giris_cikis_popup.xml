<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_abone_ekle"
    android:layout_width="400dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:background="@android:color/darker_gray"
    android:padding="5dp">


    <Button
        android:id="@+id/abone_sil_button"
        android:layout_width="175dp"
        android:layout_height="57dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@android:color/holo_green_light"
        android:text="ÇIKIŞ YAP"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"></Button>

    <Button
        android:id="@+id/kapatma_button"
        android:layout_width="54dp"
        android:layout_height="49dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:text="X"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/abone_sil_button"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/giris_tarih_saat_popup_textview"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plaka_popup_textview"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/islem_ucretler_popup_textview"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/giris_tarih_saat_popup_textview" />

    <TextView
        android:id="@+id/toplam_ucretler_popup_textview"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kalinan_sure_popup_textview" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:text="Plaka:"
        android:textSize="30dp"
        app:layout_constraintEnd_toStartOf="@+id/plaka_popup_textview"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:text="Giris Tarihi:"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/giris_tarih_saat_popup_textview"
        app:layout_constraintTop_toBottomOf="@+id/plaka_popup_textview"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:text="İşlem Ücreti:"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/islem_ucretler_popup_textview"
        app:layout_constraintTop_toBottomOf="@+id/giris_tarih_saat_popup_textview" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="158dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:text="Toplam Ücret:"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/toplam_ucretler_popup_textview"
        app:layout_constraintTop_toBottomOf="@+id/kalinan_sure_popup_textview"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/kalinan_sure_popup_textview"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/islem_ucretler_popup_textview" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Kalınan Süre:"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/kalinan_sure_popup_textview"
        app:layout_constraintTop_toBottomOf="@+id/islem_ucretler_popup_textview" />

    <TextView
        android:id="@+id/plaka_popup_textview"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>

